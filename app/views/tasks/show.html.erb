<div class="container">
  <h1><%= @task.title %></h1>
  <p class="task-grey"><%= @task.details%></p>
  <% if @task.completed == true %>
    <p><i class="far fa-check-square"></i> This task is completed</p>
  <% else %>
    <p><i class="far fa-square"></i> This task is yet to complete</p>
  <% end %>
  <div class="buttons-down d-flex justify-content-around">
    <%= link_to edit_task_path(@task), class: 'btn btn-primary' do %>
    <i class="fas fa-edit"></i> Edit task
    <% end %>
    <%= link_to tasks_path, class: 'btn btn-primary' do %>
    <i class="fas fa-undo"></i> Back to the list
    <% end %>
  </div>
</div>
